{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "rgName": {
            "type": "string",
            "metadata": {
                "description": "Name of the resourceGroup to create"
            }
        },
        "rgLocation": {
            "type": "string",
            "metadata": {
                "description": "Location for the resourceGroup"
            }
        },
        "powerStigVersion": {
            "type": "string",
            "metadata": {
                "description": "Version of PowerSTIG to use. Previous default was 4.7.1"
            },
            "defaultValue": "4.18.0"
        },
        "minorVersion": {
            "type": "string",
            "metadata": {
                "description": "Minor Version value of the image being created (bump this to produce a new image)"
            },
            "defaultValue": "1"
        },
        "imageTemplateName": {
            "type": "string",
            "metadata": {
                "description": "Name of the image template"
            },
            "defaultValue": "Win2022_STIG"
        },
        "imageTemplateCoreName": {
            "type": "string",
            "metadata": {
                "description": "Name of the core (no gui) image template"
            },
            "defaultValue": "Win2022_Core_STIG"
        }
    },
    "functions": [],
    "variables": {
        "managedIdentityUrl": "[uri(deployment().properties.templateLink.uri, 'nested/managedIdentity.json')]",
        "imageGalleryUrl": "[uri(deployment().properties.templateLink.uri, 'nested/imageGallery.json')]",
        "srv2022imageTemplateUrl": "[uri(deployment().properties.templateLink.uri, 'imageTemplates/windows2022.json')]",
        "imageDefinitionUrl": "[uri(deployment().properties.templateLink.uri, 'nested/imageDefinition.json')]",
        "srv2022MofUrl": "[uri(deployment().properties.templateLink.uri, 'mof/WindowsServer2022v1r3/localhost.mof')]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2019-10-01",
            "name": "[parameters('rgName')]",
            "location": "[parameters('rgLocation')]",
            "tags": {
                "Note": "subscription level deployment"
            },
            "properties": {}
        },
        {
            "name": "managedIdentityDeploy",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "resourceGroup": "[parameters('rgName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', parameters('rgName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('managedIdentityUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "name": {
                        "value": "[parameters('rgName')]"
                    }
                }
            }
        },
        {
            "name": "imageGalleryDeploy",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "resourceGroup": "[parameters('rgName')]",
            "dependsOn": [
                "managedIdentityDeploy"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('imageGalleryUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "name": {
                        "value": "[parameters('rgName')]"
                    }
                }
            }
        },
        {
            "name": "imageDefinitionsDeploy",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "resourceGroup": "[parameters('rgName')]",
            "dependsOn": [
                "imageGalleryDeploy"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('imageDefinitionUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "galleryName": {
                        "value": "[reference('imageGalleryDeploy').outputs.galleryName.value]"
                    },
                    "definitions": {
                        "value": [
                            {
                                "imageDefinitionName": "Win2022_STIG",
                                "osType": "Windows",
                                "osState": "Generalized",
                                "publisher": "MicrosoftWindowsServer",
                                "offer": "WindowsServer",
                                "sku": "2022-Datacenter-Stig",
                                "minRecommendedvCPUs": 4,
                                "maxRecommendedvCPUs": 16,
                                "minRecommendedMemory": 64,
                                "maxRecommendedMemory": 128
                            }
                        ]
                    }
                }
            }
        },
        {
            "name": "windows2022STIGtemplate",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "resourceGroup": "[parameters('rgName')]",
            "dependsOn": [
                "imageDefinitionsDeploy"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('srv2022imageTemplateUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "identityId": {
                        "value": "[reference('managedIdentityDeploy').outputs.identityName.value]"
                    },
                    "mofUrl": {
                        "value": "[variables('srv2022MofUrl')]"
                    },
                    "galleryName": {
                        "value": "[reference('imageGalleryDeploy').outputs.galleryName.value]"
                    },
                    "imageTemplateName": {
                        "value": "[parameters('imageTemplateName')]"
                    },
                    "powerStigVersion": {
                        "value": "[parameters('powerStigVersion')]"
                    },
                    "stigVersion": {
                        "value": "2.4"
                    },
                    "osVersion": {
                        "value": "2022"
                    },
                    "osRole": {
                        "value": "MS"
                    },
                    "minorVersion": {
                        "value": "[parameters('minorVersion')]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}